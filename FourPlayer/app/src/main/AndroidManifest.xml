<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jackdawson.fourplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/four_in_one"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Audio"
            android:label="@string/title_activity_audio"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"/>

        <service
            android:name=".MusicService"
            android:exported="false" />

        <activity android:name=".Video"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".MusicPlayer1"
            android:label="@string/title_activity_music_player1"
            android:parentActivityName=".Audio"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".VideoPlayer">
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
        </activity>
        <activity android:name=".AudioRecorder"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AudioRecordView"
            android:parentActivityName=".AudioRecorder"
            />
        <activity android:name=".VideoRocorder"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".Audio"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jackdawson.fourplayer.Audio" />
        </activity>
    </application>

</manifest>