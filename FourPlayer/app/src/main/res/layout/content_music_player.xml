<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_music_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jackdawson.fourplayer.MusicPlayer"
    tools:showIn="@layout/activity_music_player">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/container_fragment"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/music_activity_artist"
        android:gravity="center"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/music_activity_artist"
        android:layout_marginBottom="62dp"
        android:id="@+id/seekBar"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_skip_next_white_36dp"
        android:layout_marginEnd="29dp"
        android:id="@+id/nextButton"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/playButton"
        android:layout_alignEnd="@+id/seekBar" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/music_activity_artist"
        android:layout_marginBottom="29dp"
        android:id="@+id/music_activity_title"
        android:layout_alignStart="@+id/seekBar"
        android:textAlignment="viewStart"
        />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/ic_play_white_36dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="18dp"
        android:id="@+id/playButton"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_skip_previous_white_36dp"
        android:id="@+id/previousButton"
        android:layout_alignBottom="@+id/playButton"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginStart="28dp" />

</RelativeLayout>
