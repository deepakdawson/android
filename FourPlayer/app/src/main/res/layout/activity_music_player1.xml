<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/seekBar"
        android:layout_below="@+id/appbar"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/audio" />


    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:layout_alignTop="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/playSongButton"
       android:src="@drawable/ic_play_white_36dp"
        android:focusableInTouchMode="true"
        style="@android:style/Widget.Holo.ImageButton"
        android:visibility="visible"
        android:scaleType="fitXY"
        android:contentDescription="@string/audio" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_skip_next_white_36dp"
        android:layout_alignTop="@+id/playSongButton"
        android:layout_toEndOf="@+id/playSongButton"
        android:layout_marginStart="19dp"
        android:id="@+id/nextSongButton"
        android:scaleType="fitXY"

        android:focusableInTouchMode="true"

        android:visibility="visible"
        style="@android:style/Widget.Holo.ImageButton"
        android:contentDescription="@string/audio" />


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/seekBar"

        android:layout_above="@+id/title_of_song"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.SeekBar" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
android:scaleType="fitXY"
        android:layout_marginEnd="24dp"
        android:id="@+id/previousSongButton"
        android:src="@drawable/ic_skip_previous_white_36dp"
        android:focusableInTouchMode="true"
        style="@android:style/Widget.Holo.ImageButton"
        android:visibility="visible"
        android:contentDescription="@string/audio"
        android:layout_alignTop="@+id/playSongButton"
        android:layout_toStartOf="@+id/playSongButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songTime"
        android:textAlignment="viewStart"
        android:maxLines="1"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_toEndOf="@+id/nextSongButton"
        android:layout_marginStart="47dp"
        android:textColor="@color/list_back"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
       android:src="@drawable/ic_mp_repeat_all_btn"
        android:id="@+id/loop"
        android:layout_alignTop="@+id/nextSongButton"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:alpha="1"
        style="@android:style/Widget.Material.ImageButton"
        android:background="@color/cardview_light_background" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:textAlignment="center"
        android:textColor="@color/list_back"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:id="@+id/title_of_song"

        android:textColor="@color/list_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

