<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audio_recorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jackdawson.fourplayer.AudioRecorder"
    android:background="@color/colorAccent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:srcCompat="@drawable/record_theme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/rec_stop"
        android:layout_marginEnd="35dp"
        android:id="@+id/record_audio_stop"
        android:scaleType="fitXY"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/record_audio"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/record_view"
        android:scaleType="fitXY"
        android:background="@color/colorAccent" />

    <Chronometer
        android:layout_marginTop="26dp"
        android:id="@+id/record_audio_time"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp" />

    <ImageButton
        android:layout_width="80dp"
        app:srcCompat="@drawable/record"
        android:id="@+id/record_audio"
        android:scaleType="fitXY"
        android:layout_height="80dp"
        android:background="@color/colorAccent"
        android:visibility="visible"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/record_audio_time"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
